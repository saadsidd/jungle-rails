<section class="user-login-new">

  <header class="page-header">
    <h1>Login</h1>
  </header>

  <%= form_tag '/login' do %>

    <div class="form-group my-3">
      Email:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      <%= email_field_tag :email %>
    </div>

    <div class="form-group my-3">
      Password:
      <%= password_field_tag :password %>
    </div>

    <br>

    <%= submit_tag "Submit" %>

  <% end %>

</section>